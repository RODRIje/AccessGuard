<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="12"  alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tp.accessguard.controller.PermisosController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestión de Permisos" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120"/>
            <ColumnConstraints halignment="LEFT" minWidth="220"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
        </rowConstraints>

        <Label text="Persona:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="personCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Sector:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="sectorCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Válido desde:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="fromPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Válido hasta:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="toPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Agregar Permiso" onAction="#onAdd"/>
        <Button text="Eliminar Permiso" onAction="#onDelete"/>
    </HBox>

    <TableView fx:id="table" prefHeight="280">
        <columns>
            <TableColumn fx:id="personCol" text="Persona" prefWidth="160"/>
            <TableColumn fx:id="sectorCol" text="Sector" prefWidth="120"/>
            <TableColumn fx:id="fromCol" text="Desde" prefWidth="110"/>
            <TableColumn fx:id="toCol" text="Hasta" prefWidth="110"/>
        </columns>
    </TableView>

    <Label fx:id="msgLabel"/>

</VBox>

