<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tp.accessguard.controller.PersonasController"
      spacing="12" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestión de Personal" />

    <!-- Tabla de personas -->
    <TableView fx:id="personTable" prefHeight="250" prefWidth="600">
        <columns>
            <TableColumn fx:id="colFullName" text="Nombre completo" prefWidth="200"/>
            <TableColumn fx:id="colDocumentId" text="Documento" prefWidth="120"/>
            <TableColumn fx:id="colBadgeId" text="Badge ID" prefWidth="140"/>
            <TableColumn fx:id="colStatus" text="Estado" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Formulario de edición -->
    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints halignment="LEFT" minWidth="200"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
        </rowConstraints>

        <Label text="Nombre completo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

        <Label text="Documento:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="documentIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Badge ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="badgeIdField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusCombo" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="160"/>
    </GridPane>

    <!-- Botones de acción -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Nuevo" onAction="#onNew"/>
        <Button text="Guardar" onAction="#onSave"/>
        <Button text="Eliminar" onAction="#onDelete"/>
        <Button text="Bloquear / Desbloquear" onAction="#onToggleStatus"/>
    </HBox>

    <Label fx:id="messageLabel" text="" />

</VBox>

